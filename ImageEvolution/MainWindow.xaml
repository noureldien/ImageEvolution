<Window x:Class="ImageEvolution.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Image Evolution" Height="100" Width="335"
        WindowStartupLocation="Manual" ResizeMode="NoResize"
        Left="40" Top="20" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Grid.Row="1" Background="#FFF0F0F0">
            <StackPanel Orientation="Horizontal" Margin="10,5,10,5">
                <Label Content="Generations: "/>
                <Label x:Name="labelFrameCounter"/>
            </StackPanel>
            <Button x:Name="buttonAction" Content="Start" HorizontalAlignment="Left" Margin="225,10,0,0" VerticalAlignment="Top" Width="75" Click="ButtonAction_Click"/>
        </Grid>
    </Grid>
</Window>
